@using doan3.Models;
@model List<Rap_Chieu>

<!-- Danh sách rạp -->
<ul class="rap-menu">
    @foreach (var r in Model)
    {
        <li>
            <a href="@Url.Action("PhimTheo_Rap", "Home", new { idRap = r.RapID })">
                @r.TenRap
            </a>
        </li>
    }
</ul>

<style>
    /* --- MENU RẠP CHIẾU --- */
    .rap-menu {
        background-color: #1a1a2e; /* màu trùng layout */
        border: none;
        padding: 15px 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        min-width: 700px;
        /* chia 4 cột */
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 8px 25px;
        /* căn cho dropdown */
        position: absolute;
        z-index: 9999;
        display: none; /* Ẩn mặc định */
    }

        .rap-menu li {
            list-style: none;
        }

            /* --- LINK TÊN RẠP --- */
            .rap-menu li a {
                color: #ffffff;
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                transition: color 0.2s ease;
                display: inline-block;
                padding: 5px 0;
            }

                .rap-menu li a:hover {
                    color: #ffd700 !important;
                }

    /* Hiển thị khi hover vào khu vực */
    .rap-hover:hover .rap-menu {
        display: grid;
    }
</style>
