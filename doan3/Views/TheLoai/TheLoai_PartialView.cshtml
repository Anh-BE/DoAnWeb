@using doan3.Models;
@model List<TheLoai>

<!-- Danh sách thể loại -->
<ul class="theloai-menu">
    @foreach (var tl in Model)
    {
        <li>
            <a href="@Url.Action("PhimTheoTheLoai", "Home", new { maTheLoai = tl.MaTheLoai })">
                @tl.TenTheLoai
            </a>
        </li>
    }
</ul>

<style>
    /* --- MENU THỂ LOẠI --- */
    .theloai-menu {
        background-color: #1a1a2e; /* màu trùng layout */
        border: none;
        padding: 15px 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        min-width: 700px;
        /* chia 4 cột */
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 8px 25px;
        /* căn cho dropdown */
        position: absolute;
        z-index: 9999;
    }

        .theloai-menu li {
            list-style: none;
        }

            /* --- LINK THỂ LOẠI --- */
            .theloai-menu li a {
                color: #ffffff;
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                transition: color 0.2s ease;
                display: inline-block;
                padding: 5px 0;
            }

                /* Hover: chỉ đổi sang vàng */
                .theloai-menu li a:hover {
                    color: #ffd700 !important;
                }

    /* Ẩn menu khi chưa hover */
    .theloai-menu {
        display: none;
    }

    /* Hiển thị khi hover vào nút Thể Loại */
    .theloai-hover:hover .theloai-menu {
        display: grid;
    }
</style>
