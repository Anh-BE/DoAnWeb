@model doan3.Models.Phim
@{
    ViewBag.Title = "Chi Tiết Phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Background Poster -->
<div class="movie-banner" style="background-image:url('/Content/HinhAnhSP/@Model.Poster');">
    <div class="overlay"></div>

    <div class="movie-container">

        <!-- POSTER -->
        <div class="poster-box">
            <img src="~/Content/HinhAnhSP/@Model.Poster" alt="@Model.TenPhim" />
        </div>

        <!-- INFO -->
        <div class="info-box">
            <h1 class="movie-title">@Model.TenPhim</h1>

            <div class="tags">
                <span class="tag age">@Model.PhanLoaiDoTuoi</span>
                <span class="tag year">@Model.NgayKhoiChieu.Value.ToString("yyyy")</span>
                <span class="tag time">@Model.ThoiLuong phút</span>
            </div>

            <h3 class="section-title">Mô tả</h3>
            <p class="desc">@Model.MoTa</p>

            <div class="detail-info">
                <p><strong>Đạo diễn:</strong> @Model.DaoDien</p>
                <p><strong>Thể loại:</strong> @Model.TheLoai.TenTheLoai</p>
                <p><strong>Ngày khởi chiếu:</strong> @Model.NgayKhoiChieu.Value.ToString("dd/MM/yyyy")</p>
                <p><strong>Thời lượng:</strong> @Model.ThoiLuong phút</p>
                <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
            </div>

            <!-- BUTTON -->
            <a href="@Url.Action("Details", "BanHB", new { id = Model.PhimID })" class="btn-booking">
                ĐẶT VÉ
            </a>

        </div>
    </div>
</div>

<style>
    /* Background */
    .movie-banner {
        position: relative;
        width: 100%;
        padding: 80px 0;
        background-size: cover;
        background-position: center;
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.65);
        backdrop-filter: blur(4px);
    }

    /* Layout */
    .movie-container {
        position: relative;
        z-index: 10;
        display: flex;
        width: 90%;
        margin: auto;
        gap: 40px;
        color: white;
    }

    .poster-box img {
        width: 320px;
        border-radius: 8px;
    }

    /* Title */
    .movie-title {
        font-size: 48px;
        font-weight: 800;
        margin-bottom: 10px;
    }

    /* Tags */
    .tags .tag {
        display: inline-block;
        padding: 6px 14px;
        background: rgba(255,255,255,0.15);
        margin-right: 10px;
        border-radius: 6px;
        font-size: 16px;
    }

    /* Section Title */
    .section-title {
        font-size: 23px;
        margin-top: 15px;
        font-weight: 700;
        color: white;
        margin-bottom: 8px;
    }

    /* Mô tả */
    .desc {
        color: white;
        font-size: 17px;
        line-height: 1.5;
        margin-bottom: 20px;
        max-width: 800px;
    }

    .detail-info p {
        font-size: 17px;
        margin-bottom: 6px;
    }

    /* NÚT ĐẶT VÉ */
    .btn-booking {
        position: relative;
        display: inline-block;
        padding: 15px 50px;
        margin-top: 25px;
        font-size: 22px;
        font-weight: 800;
        color: black;
        background: #ffeb00; /* Vàng */
        border-radius: 12px;
        text-decoration: none !important;
        text-decoration: none;
        overflow: hidden;
        z-index: 1;
        transition: color 0.25s ease-in-out;
    }

        /* LỚP PHỦ QUÉT NGANG */
        .btn-booking::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, #7f00ff, #3a7bd5); /* tím → xanh */
            transform: translateX(-100%);
            transition: transform 0.45s ease-in-out;
            z-index: -1;
            border-radius: 12px;
        }

        /* Hover chạy hiệu ứng quét */
        .btn-booking:hover::before {
            transform: translateX(0);
        }

        /* Chữ đổi màu trắng */
        .btn-booking:hover {
            color: white !important;
            text-decoration: none !importan;
        }
</style>
