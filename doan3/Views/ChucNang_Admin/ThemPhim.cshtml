@model doan3.Models.Phim
@{
    ViewBag.Title = "Thêm Phim Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-light" style="max-width:900px;">
    <h2 class="text-center mb-4">
        <i class="bi bi-camera-reels-fill"></i> Thêm Phim Mới
    </h2>

    @using (Html.BeginForm("ThemPhim", "PhimAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <!-- Tên Phim -->
        <div class="mb-3">
            <label class="form-label">Tên Phim</label>
            @Html.TextBoxFor(m => m.TenPhim, new { @class = "form-control bg-dark text-light border-secondary", placeholder = "Nhập tên phim..." })
        </div>

        <!-- Mô tả -->
        <div class="mb-3">
            <label class="form-label">Mô tả phim</label>
            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", id = "MoTa" })
        </div>

        <!-- Ngày khởi chiếu -->
        <div class="mb-3">
            <label class="form-label">Ngày khởi chiếu</label>
            @Html.TextBoxFor(m => m.NgayKhoiChieu,
                new { @class = "form-control bg-dark text-light border-secondary", type = "date" })
        </div>

        <!-- Thời lượng -->
        <div class="mb-3">
            <label class="form-label">Thời lượng (phút)</label>
            @Html.TextBoxFor(m => m.ThoiLuong,
                new { @class = "form-control bg-dark text-light border-secondary", type = "number", min = "1" })
        </div>

        <!-- Đạo diễn -->
        <div class="mb-3">
            <label class="form-label">Đạo diễn</label>
            @Html.TextBoxFor(m => m.DaoDien,
                new { @class = "form-control bg-dark text-light border-secondary", placeholder = "Nhập tên đạo diễn..." })
        </div>

        <!-- Độ tuổi -->
        <div class="mb-3">
            <label class="form-label">Độ tuổi</label>
            <div class="d-flex gap-4 mt-2">
                <label><input type="radio" name="PhanLoaiDoTuoi" value="13-" /> 13-</label>
                <label><input type="radio" name="PhanLoaiDoTuoi" value="13+" /> 13+</label>
                <label><input type="radio" name="PhanLoaiDoTuoi" value="16+" /> 16+</label>
                <label><input type="radio" name="PhanLoaiDoTuoi" value="18+" checked /> 18+</label>
            </div>
        </div>

        <!-- Poster -->
        <div class="mb-4">
            <label class="form-label">Poster</label>
            <input type="file" name="PosterFile" class="form-control bg-dark text-light border-secondary" />
        </div>

        <!-- Thể loại -->
        <div class="mb-4">
            <label class="form-label">Thể loại</label>
            @Html.DropDownList("MaTheLoai", ViewBag.TheLoaiList as SelectList,
                new { @class = "form-control bg-dark text-light border-secondary" })
        </div>

        <button type="submit" class="btn btn-primary px-4">Thêm Phim</button>
    }
</div>

<!-- TinyMCE -->
<script src="https://cdn.jsdelivr.net/npm/tinymce@5.10.2/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector: '#MoTa',
        height: 350,
        menubar: true,
        plugins: 'lists link image table code',
        toolbar: 'undo redo | bold italic | alignleft aligncenter alignright | bullist numlist | link | code',
        content_style: "body { background-color: #0b0f29; color: white; }"
    });
</script>

