@using doan3.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Phim Theo Rạp";
}

<div class="content-wrapper">

    <h2 class="text-center mt-4" style="font-weight:bold;">
        PHIM ĐANG CHIẾU TẠI RẠP: @ViewBag.TenRap
    </h2>

    <div class="phim-container">
        @foreach (Phim s in Model)
        {
            <div class="phim-card">
                <img src="@Url.Content("~/Content/HinhAnhSP/" + s.Poster)" alt="@s.TenPhim" />

                <div class="phim-info">
                    <p class="phim-title">
                        @(s.TenPhim.Length > 25 ? s.TenPhim.Substring(0, 25) + "..." : s.TenPhim)
                    </p>



                    <div class="phim-buttons">
                        @Html.ActionLink("Chi Tiết", "XemChiTiet", new { id = s.MaPhim }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Đặt Vé", "Details", "BanHB", new { id = s.MaPhim }, new { @class = "btn btn-success btn-sm" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .content-wrapper {
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .phim-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
    }

    .phim-card {
        background-color: #1a1a2e;
        border-radius: 10px;
        overflow: hidden;
        color: #fff;
        text-align: center;
        transition: 0.3s ease;
    }

        .phim-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

        .phim-card img {
            width: 100%;
            height: 280px;
            object-fit: cover;
        }

    .phim-info {
        padding: 10px;
    }

    .phim-title {
        font-weight: 600;
        margin: 10px 0 5px;
        font-size: 1rem;
    }

    .phim-price {
        color: #ffd700;
        font-weight: bold;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .phim-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
    }
</style>
